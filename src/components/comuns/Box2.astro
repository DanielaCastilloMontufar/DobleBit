---
interface Props {
  imagen: string;
  title: string;
  items: Array<string>;
}

const { imagen, title, items } = Astro.props;
---

<div class="relative mx-auto contain-general p-30">
  <a href="#">
    <div
      class="relative p-10 z-20 hover:bg-black delay:40 transitions-colors duration-300"
    >
      <div class="w-full">
        <img src={`${imagen}`} class="w-80 h-100 mx-auto" />
      </div>
      <h4 class="mt-3 inline-block">
        {title}
      </h4>
      <ul class="text-white/70">
        {items.map((item) => <li>{item}</li>)}
      </ul>
    </div>
    <div
      style="background-image: url('/public/fonts/dot-pattern.png'); background-size: 9px"
      class="absolute bg-repeat w-36 h-36 bottom-[-20px] right-[-20px] contain-puntos z-10"
    >
    </div>
  </a>
</div>
